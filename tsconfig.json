{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "frontend/src/*"
      ]
    }
  },
  "include": [
    "frontend/src/**/*.ts",
    "frontend/src/**/*.d.ts",
    "frontend/src/**/*.tsx",
    "frontend/src/**/*.vue",
    "frontend/src/env.d.ts"
  ],
  "references": [
    {
      "path": "./frontend/tsconfig.node.json"
    }
  ]
}